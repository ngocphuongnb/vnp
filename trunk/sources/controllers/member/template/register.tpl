<div class="login-wrapper">
	<form class="vnp-reg" action="{ACTION}" method="post">
        <h2>Register</h2>
        <input type="text" name="username" class="text-field" placeholder="First Name" />
        <input type="text" class="text-field" placeholder="Last Name" />
        <input type="email" name="email" class="text-field" placeholder="E-mail" />
        <input type="password" name="password" class="text-field" placeholder="Password" />
        <input type="password" name="repassword" class="text-field" placeholder="Repeat Password" /> 
        <input type="submit" name="mem-submit" value="Register Account" class="button" />
    </form>
</div>
